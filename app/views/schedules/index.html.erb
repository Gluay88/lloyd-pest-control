<p id="notice"><%= notice %></p>

<h1>Schedules</h1>

<table class="table">
  <thead>
    <tr>
      <th>Technician name</th>
      <th>Location name</th>
      <th>Time</th>
      <th>Duration</th>
      <th>Price</th>
      <th>Break</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.technician_name %></td>
        <td><%= schedule.location_name %></td>
        <td><%= schedule.time %></td>
        <td><%= schedule.duration %></td>
        <td><%= schedule.price %></td>
        <td><%= schedule.break %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="add-btn">
  <%= link_to 'New Schedule', new_schedule_path %>
</div>    
<br>

<div class="upload-container">
  <h4>Import Schedule</h4>
  <%= form_tag import_schedules_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Upload File" %>
  <% end %>
</div>
